@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    string pageMessage = (string)ViewData["PageMessage"];
    string pageError = (string)ViewData["PageError"];
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (string.IsNullOrEmpty(pageMessage))
{
    <div class="row">
    <div>
        <form method="post">
            <div class="form-group">
                <label for="FirstName">First name</label>
                <input class="form-control" asp-for="FirstName" placeholder="Enter first name">
            </div>
            <div class="form-group">
                <label for="LastName">Last name</label>
                <input class="form-control" asp-for="LastName" placeholder="Enter last name">
            </div>
            <div class="form-group">
                <label for="EmailAddress">Email address</label>
                <input type="email" class="form-control" asp-for="EmailAddress" placeholder="Enter email address">
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                <input class="form-control" asp-for="Age" placeholder="Enter age">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

            @if (!string.IsNullOrEmpty(pageError))
                {
                    <label style="color:red;">@Html.Raw(pageError)</label>
                }
            </form>
        </div>
    </div>
}
else
{
    <p>@Html.Raw(pageMessage)</p>
}